@using Microsoft.AspNetCore.Identity;
@model UpdateVM

@await Component.InvokeAsync("PageTitle", new { pageTitle = "Hesabların siyahısı", breadcrumbs = new[] { "Hesablar", "Hesabı yeniləmək" } })

<!-- row -->
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Hesab yeniləmək</h4>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            <div class="card-body">
                <div class="form-validation">
                    <form class="form-valide" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">
                                        <strong>Ad</strong>
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input class="form-control mb-2" asp-for="Name" placeholder="Ad..">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">
                                        <strong>Soyad</strong>
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input class="form-control mb-2" asp-for="Surname" placeholder="Soyad..">
                                        <span asp-validation-for="Surname" class="text-danger mt-2"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">
                                        <strong>İstifadəçi adı</strong>
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input class="form-control mb-2" asp-for="Username" placeholder="İstifadəçi..">
                                        <span asp-validation-for="Username" class="text-danger mt-2"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">
                                        <strong>
                                            Email
                                        </strong> <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input class="form-control mb-2" asp-for="Email" placeholder="Email..">
                                        <span asp-validation-for="Email" class="text-danger mt-2"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="col-xl-6">

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">
                                        <strong>Сins</strong>
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <select class="form-control mb-2" asp-for="Gender" asp-items="Html.GetEnumSelectList<Helper.Gender>()">
                                            <option value="">Cinsi seçin</option>
                                        </select>
                                        <span asp-validation-for="Gender" class="text-danger mt-2"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">
                                        <strong>Role</strong>
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <select class="form-control mb-2" name="role">
                                            @foreach (IdentityRole role in ViewBag.Roles)
                                            {
                                                if (Model.Role == role.Name)
                                                {
                                                    <option selected value="@role.Name">@role.Name</option>
                                                }
                                                else
                                                {
                                                    <option value="@role.Name">@role.Name</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>                              
                            </div>
                        </div>
                        <div class="d-flex justify-content-end mr-2">
                            <button type="submit" class="btn btn-primary mr-2">Təstid et</button>
                            <a asp-action="Index" class="btn btn-light">Ləğv et</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {

    <partial name="_ValidationScriptsPartial" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

                                }