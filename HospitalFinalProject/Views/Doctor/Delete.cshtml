@model Doctor

@await Component.InvokeAsync("PageTitle", new { pageTitle = "Həkimi sistemdən silməy", breadcrumbs = new[] { "Həkimlər", "Həkimi silməy" } })

<div class="delete-confirmation">
    <h4 class="confirmation-title">Are you sure you want to delete this patient?</h4>
    <div class="patient-info">
        <div class="patient-photo mb-2">
            <img src="~/images/people/@Model.Img" alt="Patient Photo" class="img-thumbnail" style="object-fit:cover;">
        </div>
        <div class="patient-details">
            <div class="detail-row">
                <div class="detail-label">Adı:</div>
                <div class="detail-value">@Model.FirstName @Model.LastName</div>
            </div>
            <div class="detail-row">
                <div class="detail-label">ID:</div>
                <div class="detail-value">@Model.Id.ToString("D5")</div>
            </div>
            <div class="detail-row">
                <div class="detail-label">Email:</div>
                <div class="detail-value">@Model.Email</div>
            </div>
            <div class="detail-row">
                <div class="detail-label">Telefon nömrə:</div>
                <div class="detail-value">@Model.PhoneNumber</div>
            </div>
        </div>
    </div>
    <div class="confirmation-buttons">
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
