@{
    Layout = null;
}
@model RegisterVM
<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Xəstəxana Daxili sistem</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/pngwing.com.png">
    <link href="~/css/style.css" rel="stylesheet">
    <style>
        .form-group {
            margin-bottom: 0rem !important;
        }
    </style>
</head>


<body class="h-100">
    <div class="authincation h-100">
        <div class="container-fluid h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
                                    <h4 class="text-center mb-4">Qeydiyyat</h4>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <form method="post">
                                        <div class="form-group">
                                            <label><strong>Ad</strong></label>
                                            <input asp-for="Name" class="form-control">
                                            <span class="text-danger" style="margin: 8px 0; display:inline-block;" asp-validation-for="Name"></span>
                                        </div>
                                        <div class="form-group">
                                            <label><strong>Soyad</strong></label>
                                            <input asp-for="Surname" class="form-control">
                                            <span class="text-danger" style="margin: 8px 0; display:inline-block;" asp-validation-for="Surname"></span>
                                        </div>
                                        <div class="form-group">                                           
                                            <label><strong>İstifadəçi adı</strong></label>
                                            <input asp-for="Username" class="form-control">
                                            <span class="text-danger" style="margin: 8px 0; display:inline-block;" asp-validation-for="Username"></span>
                                        </div>
                                        <div class="form-group">
                                            <label><strong>Email</strong></label>
                                            <input asp-for="Email" class="form-control" placeholder="hello@example.com">
                                            <span class="text-danger" style="margin: 8px 0; display:inline-block;" asp-validation-for="Email"></span>
                                        </div>
                                        <div class="form-group">
                                            <label><strong>Cins</strong></label>
                                            <select class="form-control mb-2" asp-for="Gender" asp-items="Html.GetEnumSelectList<Helper.Gender>()">
                                                <option value="">Cinsi seçin</option>
                                            </select>
                                            <span class="text-danger" style="margin: 8px 0; display:inline-block;" asp-validation-for="Gender"></span>
                                        </div>
                                        <div class="form-group">
                                            <label><strong>Şifrə</strong></label>
                                            <input asp-for="Password" class="form-control">
                                            <span class="text-danger" style="margin: 8px 0; display:inline-block;" asp-validation-for="Password"></span>
                                        </div>
                                        <div class="form-group">
                                            <label><strong>Şifrəni təsdiqlə</strong></label>
                                            <input asp-for="CheckPassword" class="form-control">
                                            <span class="text-danger" style="margin: 8px 0; display:inline-block;" asp-validation-for="CheckPassword"></span>
                                        </div>
                                        <div class="text-center mt-4">
                                            <button class="btn btn-primary btn-block">Qeydiyyatdan keç</button>
                                        </div>
                                    </form>
                                    <div class="new-account mt-3">
                                        <p>Artıq hesabınız var? <a class="text-primary" asp-action="Login">Giriş et</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--**********************************
        Scripts
    ***********************************-->
    <!-- Required vendors -->
    <script src="~/vendor/global/global.min.js"></script>
    <script src="~/js/quixnav-init.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    @section Scripts {

        <partial name="_ValidationScriptsPartial" />

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    }
</body>

</html>