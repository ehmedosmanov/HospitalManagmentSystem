@model Department

@await Component.InvokeAsync("PageTitle", new { pageTitle = "Şöbənui silməy", breadcrumbs = new[] { "Şöbələr", "Şöbəni silməy" } })

<div class="delete-confirmation">
    <h4 class="confirmation-title">Are you sure you want to delete this patient?</h4>
    <div class="patient-info">
        <div class="patient-details">
            <div class="detail-row">
                <div class="detail-label">Adı:</div>
                <div class="detail-value">@Model.Name</div>
            </div>
            <div class="detail-row">
                <div class="detail-label">Haqqında:</div>
                <div class="detail-value">@Html.Raw(Model.Description)</div>
            </div>                  
        </div>
    </div>
    <div class="confirmation-buttons">
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
